<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.MyRipple">
        <item name="colorControlHighlight">@color/colorActionBar</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="AppTheme.MyRipple2">
        <item name="colorControlHighlight">#77A50000</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="MyEditTextStyle2" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/colorActionBar</item>
        <item name="colorControlNormal">@color/colorActionBar</item>
    </style>

    <style name="MyEditTextStyle1" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>

    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorWhite</item>
    </style>

</resources>
